{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://dominio.edu/JS4Geo.json",
  "title": "JS4Geo is a JSON Schema used to validade GeoJSON documents.",
  "type": "object",
  "definitions": {
    "directPosition": {
      "$id": "#directPosition",
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "number"
      }
    },
    "point": {
      "$id": "#point",
      "required": [ "type", "coordinates" ],
      "properties": {
        "type": { "const": "Point" },
        "coordinates": {
          "$ref": "#/definitions/directPosition"
        }
      }
    },
    "lineString": {
      "$id": "#lineString",
      "required": [ "type", "coordinates" ],
      "properties": {
        "type": { "enum": [ "LineString" ] },
        "coordinates": {
          "type": "array",
          "items": {
              "$ref": "#/definitions/directPosition"
            },
          "minItems": 2
        }
      }
    },
    "polygon": {
      "$id": "#polygon",
      "required": [ "type", "coordinates" ],
      "properties": {
        "type": { "enum": [ "Polygon" ] },
        "coordinates": {
          "type": "array",
          "items": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/directPosition"
              },
              "minItems": 4
            }
        }
      }
    },
    "multiPoint": {
      "$id": "#multiPoint",
      "required": [ "type", "coordinates" ],
      "properties": {
        "type": { "enum": [ "MultiPoint" ] },
        "coordinates": {
          "type": "array",
          "items": {
                "$ref": "#/definitions/directPosition"
           }
        }
      }
    },
    "multiLineString": {
      "$id": "#multiLineString",
      "required": [ "type", "coordinates" ],
      "properties": {
        "type": { "enum": [ "MultiLineString" ] },
        "coordinates": {
          "type": "array",
          "items": {
                "$ref": "#/definitions/lineString"
           }
        }
      }
    }
     
  },
  "properties": {
    "Point": { "$ref": "#point"},
    "gml:Point": { "$r$ef": "#point"},
    "LineString": {"$ref":"#lineString"},
    "Point_No_holes": { "$ref":"#polygon" },
    "Point_With_holes": { "$ref":"#polygon" },
    "MultiPoint": { "$ref": "#multiPoint" },
    "MultiLineString": {"$ref":"#multiLineString"}    
  }
}