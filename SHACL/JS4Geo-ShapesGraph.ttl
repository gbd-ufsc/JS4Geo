@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix ex:   <http://www.example.org#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix sf:   <http://www.opengis.net/ont/sf#> .


#Validation by via SHACL API


#############################################
##### TO VALIDADE JS4Geo Point datatype #####

ex:pointShape a sh:NodeShape ;
   sh:targetClass sf:Point ;
   sh:property [
      sh:path ex:type ;
      sh:in ("Point") ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
   ] ;
   sh:property [
      sh:path ex:coordinates ;
      sh:node ex:directPositionShape ;
      ex:coordMinSize 2 ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
   ] ;
   sh:property [
      sh:path ex:bbox ;
      sh:node ex:bboxShape ;
      ex:bboxMinSize 4 ;
      ex:bboxMaxSize 6 ;
      sh:maxCount 1 ;
   ] .

##################################################
##### TO VALIDADE JS4GEo LineString datatype #####

ex:lineStringShape a sh:NodeShape;
  sh:targetClass sf:LineString ;
  sh:property [
    sh:path ex:type ;
    sh:in ( "LineString" ) ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path ex:coordinates ;
    sh:node dash:ListShape ;
    sh:property [
      sh:path ([sh:zeroOrMorePath rdf:rest] rdf:first) ;
      sh:node ex:directPositionShape ;
    ];
    ex:coordMinSize 2 ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path ex:bbox ;
    sh:node ex:bboxShape ;
    ex:bboxMinSize 4 ;
    ex:bboxMaxSize 6 ;
    sh:maxCount 1 ;
   ] .


###############################################
##### TO VALIDADE JS4Geo Polygon datatype #####

ex:polygonShape a sh:NodeShape ;
  sh:targetClass sf:Polygon ;
  sh:property [
    sh:path ex:type ;
    sh:in ("Polygon") ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path ex:coordinates ;
    sh:node dash:ListShape ;
    sh:property [
      sh:path ([sh:zeroOrMorePath rdf:rest] rdf:first) ;
      sh:node ex:internalPolygonShape ;
    ] ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path ex:bbox ;
    sh:node ex:bboxShape ;
    ex:bboxMinSize 4 ;
    ex:bboxMaxSize 6 ;
    sh:minCount 1 ;   # opcional, verificar quando existe
    sh:maxCount 1 ;
   ] .

ex:internalPolygonShape a sh:NodeShape ;
  sh:node dash:ListShape ;
  sh:property [
      sh:path ( [sh:zeroOrMorePath rdf:rest] rdf:first) ;
      sh:node ex:directPositionShape ;
   ] .


##################################################
##### TO VALIDADE JS4Geo MultiPoint datatype #####

ex:multiPointShape a sh:NodeShape ;
  sh:targetClass sf:MultiPoint ;
  sh:property [
    sh:path ex:type ;
    sh:in ("MultiPoint") ;
    sh:minCount 1 ;
    sh:maxCount 1 ;    
  ];
  sh:property [
    sh:path ex:coordinates;
    sh:node dash:ListShape;
    sh:property [
      sh:path ([sh:zeroOrMorePath rdf:rest] rdf:first);
      sh:node ex:directPositionShape;
    ];
    ex:lineStringMinSize 2 ;
    ex:LScoordMinSize 2 ;
    sh:minCount 1;
    sh:maxCount 1 ;
  ];
  sh:property [
    sh:path ex:bbox ;
    sh:node ex:bboxShape ;
    ex:bboxMinSize 4 ;
    ex:bboxMaxSize 6 ;
    sh:minCount 1 ;   # opcional, verificar quando existe
    sh:maxCount 1 ;
   ] .


#######################################################
##### TO VALIDADE JS4Geo MultiLineString datatype #####

ex:multiLineStringShape a sh:NodeShape;
  sh:targetClass sf:MultiLineString;
  sh:property [
    sh:path ex:type;
    sh:in ("MultiLineString");
    sh:minCount 1;
    sh:maxCount 1 ;
  ];
  sh:property [
    sh:path ex:coordinates;
    sh:node dash:ListShape;
    sh:property [
      sh:path ([sh:zeroOrMorePath rdf:rest] rdf:first);
      sh:node ex:coordsLineStringShape;
    ];
    sh:minCount 1;
    sh:maxCount 1 ;
  ];
  sh:property [
    sh:path ex:bbox ;
    sh:node ex:bboxShape ;
    ex:bboxMinSize 4 ;
    ex:bboxMaxSize 6 ;
    sh:minCount 1 ;   # opcional, verificar quando existe
    sh:maxCount 1 ;
   ] .

ex:coordsLineStringShape a sh:NodeShape;
  sh:property [
    sh:node dash:ListShape;
    sh:property [
      sh:path ([sh:zeroOrMorePath rdf:rest] rdf:first);
      sh:node ex:directPositionShape;
    ];
    sh:minCount 1;
  ].

