###############################################
##### TO VALIDADE JS4Geo Feature datatype #####
ex:featureShape a sh:NodeShape;
  sh:targetClass ex:feature;
  sh:property [
    sh:path ex:type;
    sh:in ("Feature");
    sh:minCount 1;
    sh:maxCount 1 ;
  ];
  sh:property [
    sh:path ex:geometry;
    sh:node ex:geometryShape;
    sh:minCount 1;
    sh:maxCount 1 ;
  ];
  sh:property [
    sh:path ex:bbox ;
    sh:node ex:bboxShape ;
    ex:bboxMinSize 4 ;
    ex:bboxMaxSize 6 ;
    sh:minCount 1 ;   # opcional, verificar quando existe
    sh:maxCount 1 ;
   ] ;
   sh:property [
     sh:path ex:properties ;
     sh:node ex:propertiesShape ;
     sh:minCount 1;
     sh:maxCount 1 ;
   ] .
   
ex:geometryShape a sh:NodeShape ;
   sh:or (
      #ex:pointShape 
      #ex:lineStringShape 
      ex:polygonShape 
      #ex:multiPointShape 
      #ex:multiLineStringShape 
      #ex:multiPolygonShape 
   ) .

