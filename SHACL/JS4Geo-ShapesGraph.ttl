      sh:jsLibrary [ sh:jsLibraryURL "https://raw.githubusercontent.com/gbd-ufsc/JS4Geo/master/SHACL/JS4Geo-SHACL-Validators.js" ] ;
      sh:jsFunctionName "bboxMaxOccur" .

